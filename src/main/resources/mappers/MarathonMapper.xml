<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tyk.readingmarathon.mappers.MarathonsMapper">
    <insert id="insertMarathon" parameterType="com.tyk.readingmarathon.entitites.MarathonsEntity" useGeneratedKeys="true" keyColumn="index" keyProperty="index">
        insert into `read_marathon`.`marathons` (`user_email`, `course_code`, `read_count`, `is_done`,
                                                 `created_at`, `finished_at`, `is_deleted`)
        VALUES (#{marathon.userEmail}, #{marathon.courseCode}, #{marathon.readCount},
                #{marathon.isDone}, #{marathon.createdAt}, #{marathon.finishedAt}, #{marathon.isDeleted})
    </insert>
    <select id="selectActiveMarathonIndexByUserEmail" resultType="java.lang.Integer">
        select `index`
        from `read_marathon`.`marathons`
        where `user_email` = #{userEmail}
          and `is_done` = false
          and `is_deleted` = false
        limit 1
    </select>


</mapper>